<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://www.pentaho.com/xml/schemas/pentaho-blueprint http://www.pentaho.com/xml/schemas/pentaho-blueprint.xsd">

  <cxf:bus id="cxfDataServiceBus"/>

  <bean id="objectMapper" class="org.pentaho.di.trans.dataservice.serialization.QueryServiceJacksonModule" factory-method="getMapper"/>
  <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
    <property name="mapper" ref="objectMapper"/>
  </bean>

  <!--bean id="dataservicesPushServer" class="org.pentaho.di.trans.dataservice.endpoint.DataServicePushEndpoint"/>

  <jaxrs:server id="dataservicesPushEndpoint" address="/dataservicesPushServer" transportId="http://cxf.apache.org/transports/websocket">
    <jaxrs:serviceBeans>
      <ref component-id="dataservicesPushServer"/>
    </jaxrs:serviceBeans>
    <jaxrs:extensionMappings>
      <entry key="json" value="application/json"/>
      <entry key="xml" value="application/xml"/>
    </jaxrs:extensionMappings>
  </jaxrs:server-->

  <bean id="dataservicesServer" class="org.pentaho.di.trans.dataservice.endpoint.DataServiceEndpoint">
    <argument ref="dataServiceResolverDelegate"/>
  </bean>

  <jaxrs:server id="dataservicesEndpoint" address="/dataservicesServer">
    <jaxrs:serviceBeans>
      <ref component-id="dataservicesServer"/>
    </jaxrs:serviceBeans>
    <jaxrs:extensionMappings>
      <entry key="json" value="application/json"/>
      <entry key="xml" value="application/xml"/>
    </jaxrs:extensionMappings>
    <jaxrs:providers>
      <ref component-id="jsonProvider"/>
    </jaxrs:providers>
  </jaxrs:server>

</blueprint>
